<body>

    <form class="add-workout-form">

        <section class="workout-name-section">
            <div>
                <label for="workout-name">workout name</label>
            </div <div>
            <input type="text" id="workout-name" class="workout-name-input" placeholder="eg: 'benchpress'" />
            </div>
        </section>

        <section class="workout-name-section">
            <div>
                <label for="weight">weight</label>
            </div <div>
            <input type="text" id="weight" class="weight-input" placeholder="lbs/kgs" />
