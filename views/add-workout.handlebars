        </section>

        <section class="reps-section">
            <div>
                <label for="reps"># of reps</label>
            </div <div>
            <input type="text" id="reps" class="reps-input" placeholder="reps" />
            </div>
        </section>

        <section class="workout-name-section">
            <div>
                <label for="sets"># of sets</label>
            </div <div>
            <input type="text" id="sets" class="sets-input" placeholder="sets" />
